<h1>Editando: {{user.name}}</h1>

<form action="/users/update" method="POST" class="form">
<input type="hidden" name="id" value="{{user.id}}">
  <div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" name="name" id="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
  </div>
  <div class="form-control">
    <label for="occupation">Profissão:</label>
    <input type="text" name="occupation" id="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
  </div>
  <div class="form-control form-checkbox">
    {{#if user.newletter}}
    <input type="checkbox" name="newletter" id="newletter" checked>
    {{else}}
     <input type="checkbox" name="newletter" id="newletter">
     {{/if}}
    <label for="newletter">Enviar promoções</label>
  </div>
  <input type="submit" value="Editar">
</form>
<div class="address-container">
  <h2>Endereço:</h2>
  <form action="/address/create" method="post">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street" placeholder="Digite a rua">
    </div>
    <div class="form-control">
      <label for="number">Numero:</label>
      <input type="text" name="number" placeholder="Digite a rua">
    </div>
    <div class="form-control">
      <label for="city">Cidade:</label>
      <input type="text" name="city" placeholder="Digite a rua">
    </div>
    <input type="submit" value="Incluir endereço">
    
  </form>
  <div class="address-list">
    <h2>Lista de endereços:</h2>
    {{#each user.Addresses}}
    <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
    {{/each}}
  </div>
  </div>

