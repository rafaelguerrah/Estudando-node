<h1>Usuarios Cadastrados</h1>

<div class="container">
    {{#each users}}
    <div class="item">
        <p>{{this.name}}</p>
        <p>{{this.occupation}}</p>
        <div class="actions">
            <a href="/users/{{this.id}}" class="details-btn">Ver detalhes</a>
            <form action="/users/delete/{{this.id}}" class="delete-btn" method="post">
            <input type="submit" value="Excluir" class="delete-btn">
            </form>
        </div>
    </div>
    {{/each}}
</div>